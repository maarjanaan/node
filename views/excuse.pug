extends layout

block content
    if excuse
        h1= excuse.title
        h5 Autor #{author}
        p= excuse.body
        hr
        if user
            if user.id == excuse.author._id
                a.btn.btn-default(href='/excuses/edit/'+excuse._id) Muuda
                a.btn.btn-danger.delete-excuse(href='#', data-id=excuse._id) Kustuta