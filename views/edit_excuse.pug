extends layout

block content
    h1 #{title}
    form(method='POST', action='/excuses/edit/'+excuse._id)
        #form-group
            label Pealkiri:
            input.form-control(name='title', type="text", value=excuse.title)
        #form-group
            label Autor:
            input.form-control(name='author', type="text", value=excuse.author)
        #form-group
            label Sisu:
            textarea.form-control(name='body')= excuse.body
        br
        input.btn.btn-primary(type='submit', value='Muuda vabandust')